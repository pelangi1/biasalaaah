#include <stdio.h>

int main()
{
	int ordo, a, b;
	float arr[3][3];
	float det;
	
	printf("masukkan ordo matrix yang anda inginkan (2x2 or 3x3) : ");
	scanf("%d", ordo)
		
	printf("masukkan angka matrix : \n");
		for( a=0; a<ordo; a++){
		for( b=0; b<ordo; b++){
			printf("masukkan index [%d][%d] : ", a, b);
			scanf("%f", &arr[a][b]);
		}
	}
	   	// hasil
	printf("\nHasil inputan : \n");
		for( a=0; a<ordo; a++){
			for( b=0; b<ordo; b++){
		printf("%.1f\t\t", arr[a][b]);
		}
		printf("\n");
 	}
		//   hitung det
		if(ordo==2){
 	   	det= (arr[0][0]-arr[1][1]*arr[0][1]*arr[1][0]);
		}	
		else if(ordo==3)
	 	{
		det= (arr [0][0]*arr [1][1]*arr [2][2])+(arr [0][1]*arr [1][2]*arr [2][0])+
   	 	 	 (arr [0][2]*arr [1][0]*arr [2][1])-(arr [0][2]*arr [1][1]*arr [2][0])-
   	   		 (arr [0][0]*arr [1][2]*arr [2][1])-(arr [0][1]*arr [1][0]*arr [2][2]);
		}		 	
		
		printf("\nNilai determian yang dihasilkan adalah : %.2f\n", det);
		return 0;
}
